<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/deep_space"
    tools:context=".DeepSpaceRedo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cargoText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargo Shiut"
                android:textSize="50dp"
                android:layout_marginTop="20dp"
                android:textColor="#232323"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- Cargo Data -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cargoText2">

                <TextView
                    android:id="@+id/lowCargoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Low Cargo: 0"
                    android:textColor="#232323"
                    android:textSize="35dp" />
                <Button
                    android:id="@+id/cargoPlus2"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@id/lowCargoText"
                    android:layout_marginRight="10dp"/>
                <Button
                    android:id="@+id/cargoMinus2"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_toLeftOf="@id/cargoPlus2"
                    android:layout_alignBottom="@id/cargoPlus2"/>

                <TextView
                    android:id="@+id/midCargoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lowCargoText"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Mid Cargo: 0"
                    android:textColor="#232323"
                    android:textSize="25dp" />

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>